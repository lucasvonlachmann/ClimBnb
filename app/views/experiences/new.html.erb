<h1 class="text-center">New Experience</h1>
<div class="container">
  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">

      <%= simple_form_for @experience do |f| %>
        <%= f.input :name %>
        <%= f.association :mountain %>
        <%= f.input :description %>
        <%= f.input :capacity %>
        <%= f.input :duration %>
        <%= f.input :price, label: "Price per person" %>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit %>
      <% end %>

    </div>
  </div>
</div>
